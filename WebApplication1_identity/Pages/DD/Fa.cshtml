@page
@model FaModel
@{
}
<div class="row"> 
    <div class="col-md-4">
        <section>
            <h4>发布信息</h4>
            <form method="post"  class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label>主题</label>
                    @Html.DropDownListFor(model => model.LTopic,
                     Model.LTopic // new List<SelectListItem> { new SelectListItem{Text="请选择" ,Value="-1"}  }
                   ,new {   @class="form -control"}) 

                    </div>
                <div class="form-group">
                    <label>显示位置</label>
                    @{
                        if (Model.LTeam != null)
                        {
                            foreach (var item in Model.LTeam)
                            {
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="LTeam" value="@item.Id" />@item.Name
                                        </label>
                                    </div>
                            }
                        }
                    }
                </div>
                <div class="form-group">
                    <input type="text" placeholder="标题" name="Title" class="form-control" />
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                    <textarea name="Content" placeholder="描述" cols="3" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Input.Content" class="text-danger"></span>
                    <button type="submit" asp-page-handler="New" class="btn btn-default">提交</button>
                </div>
            </form>
        </section>
    </div>
</div>